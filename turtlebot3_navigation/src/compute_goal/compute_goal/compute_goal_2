import rclpy
from rclpy.node import Node
from geometry_msgs.msg import PoseStamped, PoseWithCovarianceStamped, Point, Quaternion
from tf2_ros import Buffer, TransformListener
from rclpy.duration import Duration
from rclpy.time import Time

class ComputeGoalNode(Node):
    def __init__(self):
        super().__init__('compute_goal_node')
        self.tf_buffer = Buffer()
        self.tf_listener = TransformListener(self.tf_buffer, self)

        self.publisher = self.create_publisher(PoseStamped, '/goal', 10)

        # Publisher initial pose
        self.initialpose_pub = self.create_publisher(
            PoseWithCovarianceStamped,
            '/initialpose',
            10
        )
        self.initial_published = False

        # Flag per abilitare nav2 solo dopo il ritardo
        self.nav2_enabled = False  

        # Timer principale (disabilitato fino al ritardo)
        self.timer = self.create_timer(0.1, self.timer_callback)

        # Timer di ritardo per Nav2 (es. 3 secondi)
        self.create_timer(3.0, self.enable_nav2_after_delay)

    def enable_nav2_after_delay(self):
        if not self.nav2_enabled:
            self.nav2_enabled = True
            self.get_logger().info("Nav2 abilitato dopo il ritardo")

    def publish_initial_pose_once(self):
        if self.initial_published:
            return

        msg = PoseWithCovarianceStamped()
        msg.header.stamp = self.get_clock().now().to_msg()
        msg.header.frame_id = 'map'

        msg.pose.pose.position.x = 0.0
        msg.pose.pose.position.y = 0.0
        msg.pose.pose.position.z = 0.0
        msg.pose.pose.orientation.w = 1.0
        msg.pose.covariance = [0.0] * 36

        self.initialpose_pub.publish(msg)
        self.get_logger().info("Initial pose pubblicata")

        self.initial_published = True

    def timer_callback(self):
        # Pubblica initial pose una volta
        self.publish_initial_pose_once()

        # Se nav2 non è ancora abilitato, non fare altro
        if not self.nav2_enabled:
            return

        # Se goal già pubblicato, stop
        if hasattr(self, "goal_published") and self.goal_published:
            return

        now = Time()
        positions = []

        all_tags_available = all(
            self.tf_buffer.can_transform('map', tag_frame, now)
            for tag_frame in ['tag36h11:1', 'tag36h11:10']
        )

        if not all_tags_available:
            self.get_logger().info("Waiting for both tag TFs to be available...")
            return  

        for tag_frame in ['tag36h11:1', 'tag36h11:10']:
            transform = self.tf_buffer.lookup_transform(
                'map',
                tag_frame,
                now,
                timeout=Duration(seconds=1.0)
            )
            positions.append(transform.transform.translation)

        mid_x = (positions[0].x + positions[1].x) / 2.0
        mid_y = (positions[0].y + positions[1].y) / 2.0
        mid_z = (positions[0].z + positions[1].z) / 2.0

        goal = PoseStamped()
        goal.header.stamp = self.get_clock().now().to_msg()
        goal.header.frame_id = 'map'
        goal.pose.position = Point(x=mid_x, y=mid_y, z=mid_z)
        goal.pose.orientation = Quaternion(w=1.0)

        self.publisher.publish(goal)
        self.get_logger().info(
            f"Goal pubblicato: x={mid_x:.2f}, y={mid_y:.2f}, z={mid_z:.2f}"
        )

        self.goal_published = True


def main(args=None):
    rclpy.init(args=args)
    node = ComputeGoalNode()
    rclpy.spin(node)
    rclpy.shutdown()


if __name__ == '__main__':
    main()
